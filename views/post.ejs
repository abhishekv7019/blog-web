<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/aboutblog.css">
    <title>Document</title>
</head>
<body>
  <ul class="header">
    <li class="ani"><a href="/blogoff" class="it1"><h1 class="title">Blog<span class="title1">Off</span></h1></a></li>
    <li><a href="/home" class="it1"><h2 class="item1 a " id="p">Home</h2></a></li>
    <li><a href="/compose" class="it1"><h2 class="itemm a " id="l">Compose</h2></a></li>
    <li><a href="/profile" class="it1"><h2 class="itemm a " id="m">Profile</h2></a></li>
</ul>
<br>
<br>
<div class="space">
    <h1 class="posttitle"><%= title %></h1>
    <p class="para"><%= content %></p>
  </div>
  <form method="post" action="/<%= title %>">
  <div class="social"> 
    <button class="like-button" type="submit" name="postin" value="likebutton">Like <span><%= num %></span></button>
  </div>
  <div class="comments">
    <h2 class="commentheading">Comments</h2>
    <textarea rows="10" cols="200" placeholder="Leave a comment" name="commentkaro"></textarea>
    <button type="submit" name="postin" value="commentsubmit" class="comsub" >Submit</button>
    <% comments.forEach(function(c){ %>
      <div class="commentblock">
        <% i=commentnum; %>
        <p class="commentnumber">Comment <%= i %></p> 
        <p class="actualcomment"><%= c %></p>
        <%  commentnum=commentnum+1; %>
      </div>
      <% }) %>
     </div>
</form>


<br>
<div class="footer">
    <br><br>
  <h3 class="infof">Sign up for newsletters and updates</h3>
  <br>
  <form action="/home" method="post">
    <input type="email" name="useremail" class="mail" size="30" placeholder="Enter your email id" ><br><br>
    <button type="submit" name="bb" class="smail" value="emailsub">Submit</button>
  </form>
  <br><br><br>
  <h3>copyrights @2022</h3>
</div>
</body>
</html>